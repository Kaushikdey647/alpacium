    },
    {
      "name": "API: Uvicorn (prod)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}


